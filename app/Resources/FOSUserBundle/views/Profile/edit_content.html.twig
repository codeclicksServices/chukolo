{% trans_default_domain 'FOSUserBundle' %}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-4 col-md-5">
                <div class="card card-user">
                    <div class="image">

                    </div>
                    <div class="content">
                        <div class="author">
                            <img class="avatar border-white" src="{{ asset('assets/img/avater.png') }}" alt="..."/>
                            <h4 class="title">Hello <strong>{{ app.user.username }}</strong> !!!<br />

                            </h4>
                        </div>
                        <p class="description text-center">
                            "You are <strong style="color: #2e6da4">{{ app.user.firstName }} {{ app.user.lastName }}</strong><br>
                            This is your phone number <strong style="color: #2e6da4">0{{ app.user.phone }}</strong> <br>
                            You bank with <strong style="color: #2e6da4">{{ app.user.bank }}</strong><br>
                            and your account number is
                            {% if app.user.accountNumber|length < 10  %}

                                {% if app.user.accountNumber|length == 9  %}

                                <strong style="color: #2e6da4"> 0{{ app.user.accountNumber }}</strong>

                                {% elseif app.user.accountNumber|length == 8  %}
                                  <strong style="color: #2e6da4">00{{ app.user.accountNumber }}</strong>

                                {% elseif app.user.accountNumber|length == 7  %}
                                  <strong style="color: #2e6da4">000{{ app.user.accountNumber }}</strong>

                                {% elseif app.user.accountNumber|length == 6  %}
                                  <strong style="color: #2e6da4" >0000{{ app.user.accountNumber }}</strong>

                                {% elseif app.user.accountNumber|length == 5  %}
                                  <strong style="color: #2e6da4">00000{{ app.user.accountNumber }}</strong>


                                {% endif %}
                            {% else %}
                              <strong style="color: #2e6da4">{{ app.user.accountNumber }}</strong>
                            {% endif %}
                          <br />

                            we good ?"
                        </p>
                    </div>
                    <hr>
                    <div class="text-center">
                        <div class="row">
                            <div class="col-md-3 col-md-offset-1">
                           
                            </div>
                            <div class="col-md-4">
                              
                            </div>
                            <div class="col-md-3">

                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-lg-8 col-md-7">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Edit Profile</h4>
                    </div>
                    <div class="content">

                            {{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}

                                <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>User Name</label>
                                        {{ form_widget(form.username,{ 'attr':{'readonly':'readonly'} } ) }}
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Email address</label>
                                        {{ form_widget(form.email,{ 'attr':{'readonly':'readonly'} }) }}
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Phone Number</label>
                                        {{ form_widget(form.phone) }}
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>First Name</label>
                                        {{ form_widget(form.firstName,{ 'attr':{'readonly':'readonly'} }) }}
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Last Name</label>
                                        {{ form_widget(form.lastName,{ 'attr':{'readonly':'readonly'} }) }}
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Bank</label>
                                        {{ form_widget(form.bank) }}

                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Account Name</label>

                                        {{ form_widget(form.accountName) }}
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Account Number</label>
                                        {{ form_widget(form.accountNumber) }}
                                    </div>
                                </div>
                            </div>


                           <div class="text-center">
                                <input type="submit" class="btn btn-info btn-fill btn-wd" value="{{ 'profile.edit.submit'|trans }}" />
                            </div>
                            <div class="clearfix"></div>
                            {{ form_end(form) }}
                    </div>
                </div>
            </div>


        </div>
    </div>
</div>

