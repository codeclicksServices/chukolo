{% trans_default_domain 'FOSUserBundle' %}


 {{form_start(form, {'method': 'POST', 'attr':{'class': ''}})}}



<div class="form-group row">
    <label for="example-password-input" class="col-2 col-form-label">{{ form_label(form.email) }}</label>
    <div  style="color: red" class="col-2">
        {{ form_errors(form.email) }}
    </div>
    <div class="col-10">
        {{ form_widget(form.email) }}
    </div>
</div>
<div class="form-group row">
    <label for="example-email-input" class="col-2 col-form-label">{{ form_label(form.username) }}</label>
    <div  style="color: red" class="col-2">
        {{ form_errors(form.username) }}
    </div>
    <div class="col-10">
        {{ form_widget(form.username) }}
    </div>
</div>
<div class="form-group row">
    <label for="example-url-input" class="col-2 col-form-label">{{ form_label(form.plainPassword.first) }}</label>
    <div  style="color: red" class="col-2">
        {{ form_errors(form.plainPassword.first) }}
    </div>
    <div class="col-10">
        {{ form_widget(form.plainPassword.first) }}
    </div>
</div>
<div class="form-group row">
    <label for="example-tel-input" class="col-2 col-form-label">{{ form_label(form.plainPassword.second) }}</label>
    <div  style="color: red" class="col-2">
        {{ form_errors(form.plainPassword.second) }}
    </div>
    <div class="col-10">
        {{ form_widget(form.plainPassword.second) }}
    </div>
</div>






<div class="panel panel-footer">
    <input type="submit" value="{{ 'registration.submit'|trans }}"
           class="btn btn-md btn-outline btn-success btn-block" />
</div>

{{ form_end(form) }}


