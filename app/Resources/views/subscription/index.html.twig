{% extends 'base.html.twig' %}

{% block body %}
    <h1>Subscriptions list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Value</th>
                <th>Bannername</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for subscription in subscriptions %}
            <tr>
                <td><a href="{{ path('subscription_show', { 'id': subscription.id }) }}">{{ subscription.id }}</a></td>
                <td>{{ subscription.name }}</td>
                <td>{{ subscription.description }}</td>
                <td>{{ subscription.value }}</td>
                <td>{{ subscription.bannerName }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('subscription_show', { 'id': subscription.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('subscription_edit', { 'id': subscription.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('subscription_new') }}">Create a new subscription</a>
        </li>
    </ul>
{% endblock %}
